<% provide(:title,"勤怠編集" ) %>
<div>
  <h1>勤怠編集画面</h1>
  <%= form_for(@user, url: update_attendances_path, method: :patch) do |f| %>
  <table class = "table-bordered table-striped table-condensed">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>出勤時間</th>
        <th>退勤時間</th>
        <th>在社時間</th>
        <th>備考</th>
      </tr>
    </thead>
    <tbody>
      <% @dates.each do |day| %>
        <%= fields_for "attendances[]", day do |af| %>
          <tr>
            <td><%= day.worked_on.to_s(:date) %></td>
            <td><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></td>
            <td><%= af.time_field :started_at, class: "form-controll" %></td>
            <td><%= af.time_field :finished_at, class: "form-controll" %></td>
            <td>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= working_times(day.started_at, day.finished_at) %> <!-- AttendancesHelper -->
              <% end %>
            </td>
            <td><%= af.text_field :note, class: "form-controll" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div class="btn-attendances-update">
    <%= f.submit "更新", class: "btn btn-primary" %>
    <%= link_to "キャンセル", user_path(id: @user, params:{first_day: @first_day}), class: "btn btn-default btn-block" %>
  </div>
  <% end %>
</div>